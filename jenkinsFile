pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', credentialsId: 'github-token', url: 'https://github.com/GAbriElaJnbg30/Testing_ApiRest.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'go version'
                    sh 'go mod tidy'
                    sh 'go build -o app .'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'go test -v ./...'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
