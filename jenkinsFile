pipeline {
    agent any

    environment {
        GO_VERSION = '1.23.2' // Ajusta a la versión de Go que estás usando
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', credentialsId: 'github-token', url: 'https://github.com/GAbriElaJnbg30/Testing_ApiRest.git'
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    docker.build('my-go-app', '.').inside {
                        sh 'go version'
                        sh 'go build -o app .'
                        sh 'go test -v ./...'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
